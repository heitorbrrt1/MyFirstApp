<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Base -->
    <style name="Theme.App.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <!-- Tema Monocromático -->
    <style name="Theme.App.Monocromatico" parent="Theme.App.Base">
        <item name="colorPrimary">@color/colorPrimaryMonochromatic</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMonochromatic</item>
        <item name="colorAccent">@color/colorAccentMonochromatic</item>
        <item name="android:colorBackground">@color/colorBackgroundMonochromatic</item>
    </style>

    <!-- Tema Triádico -->
    <style name="Theme.App.Triadico" parent="Theme.App.Base">
        <item name="colorPrimary">@color/colorPrimaryTriadic</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkTriadic</item>
        <item name="colorAccent">@color/colorAccentTriadic</item>
        <item name="android:colorBackground">@color/colorBackgroundTriadic</item>
    </style>

    <!-- Tema Quadrático -->
    <style name="Theme.App.Quadratico" parent="Theme.App.Base">
        <item name="colorPrimary">@color/colorPrimaryQuadratic</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkQuadratic</item>
        <item name="colorAccent">@color/colorAccentQuadratic</item>
        <item name="android:colorBackground">@color/colorBackgroundQuadratic</item>
    </style>

    <!-- Tema Padrão do Aplicativo -->
    <style name="Theme.PdmNavigation" parent="Theme.App.Monochromatic" />
</resources>